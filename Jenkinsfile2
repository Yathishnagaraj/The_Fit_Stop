pipeline {
    agent any
    
    parameters {
        string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Docker image tag to deploy')
    }
    
    environment {
        IMAGE_NAME = 'yathish047/fitstopweb'
    }
    
    stages {
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Deploying ${IMAGE_NAME}:${params.IMAGE_TAG}"
                    
                    // Check if deployment exists, create if not
                    def exists = sh(script: 'kubectl get deployment fitstop-deployment 2>/dev/null', returnStatus: true)
                    
                    if (exists != 0) {
                        echo "Creating initial deployment..."
                        sh "kubectl apply -f deployment.yaml"
                    } else {
                        echo "Updating existing deployment..."
                        sh "kubectl set image deployment/fitstop-deployment fitstop-container=${IMAGE_NAME}:${params.IMAGE_TAG}"
                    }
                    
                    // Wait for deployment to finish
                    sh "kubectl rollout status deployment/fitstop-deployment --timeout=5m"
                    
                    // Show status
                    sh "kubectl get pods -l app=fitstop"
                }
            }
        }
    }
    
    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
